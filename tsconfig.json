{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "resolveJsonModule": true,
    "rootDir": "src/ts",
    "outDir": "distribution/js",
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": false,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
    "incremental": false,
    "types": []
  }
}
